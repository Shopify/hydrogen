{
  "name": "@shopify/cli-hydrogen",
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "version": "4.0.9",
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "scripts": {
    "build": "tsup --clean --config ./tsup.config.ts && oclif manifest",
    "dev": "tsup --watch --config ./tsup.config.ts",
    "typecheck": "tsc --noEmit",
    "generate:manifest": "oclif manifest",
    "test": "cross-env SHOPIFY_UNIT_TEST=1 vitest run --passWithNoTests",
    "test:watch": "cross-env SHOPIFY_UNIT_TEST=1 vitest --passWithNoTests"
  },
  "devDependencies": {
    "@types/diff": "^5.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/gunzip-maybe": "^1.4.0",
    "@types/prettier": "^2.7.2",
    "@types/recursive-readdir": "^2.2.1",
    "@types/tar-fs": "^2.0.1",
    "oclif": "^3.4.2",
    "vitest": "^0.29.7"
  },
  "peerDependencies": {
    "@remix-run/react": "^1.14.0",
    "@shopify/hydrogen-react": "^2023.1.7",
    "@shopify/remix-oxygen": "^1.0.4"
  },
  "dependencies": {
    "@oclif/core": "^1.20.4",
    "@remix-run/dev": "^1.14.0",
    "@shopify/cli-kit": "3.29.0",
    "@shopify/mini-oxygen": "^1.3.1",
    "@types/jscodeshift": "^0.11.6",
    "diff": "^5.1.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "gunzip-maybe": "^1.4.2",
    "jscodeshift": "^0.14.0",
    "prettier": "^2.8.4",
    "recursive-readdir": "^2.2.3",
    "simple-git": "^3.17.0",
    "tar-fs": "^2.1.1",
    "typescript": "^4.9.5"
  },
  "bin": "dist/create-app.js",
  "exports": {
    "./package.json": "./package.json",
    "./commands/hydrogen/init": {
      "types": "./dist/commands/hydrogen/init.d.ts",
      "default": "./dist/commands/hydrogen/init.js"
    }
  },
  "files": [
    "dist",
    "oclif.manifest.json"
  ],
  "engines": {
    "node": ">=16.13"
  },
  "oclif": {
    "commands": "dist/commands",
    "hooks": {
      "init": "./dist/hooks/init.js"
    },
    "topics": {
      "hydrogen": {
        "description": "Hydrogen commands"
      }
    }
  }
}
