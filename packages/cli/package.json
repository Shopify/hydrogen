{
  "name": "@shopify/cli-hydrogen",
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "version": "4.0.0-alpha.9",
  "type": "module",
  "scripts": {
    "build": "tsup --clean --config ./tsup.config.ts && oclif manifest",
    "dev": "tsup --watch --config ./tsup.config.ts",
    "typecheck": "tsc --noEmit",
    "generate:manifest": "oclif manifest"
  },
  "devDependencies": {
    "@oclif/core": "1.21.0",
    "@types/fs-extra": "^9.0.13",
    "@types/prettier": "^2.7.2",
    "oclif": "^3.4.2"
  },
  "peerDependencies": {
    "@oclif/core": "*"
  },
  "dependencies": {
    "@remix-run/dev": "v1.11.0",
    "@shopify/cli-kit": "3.38.0",
    "@shopify/mini-oxygen": "^1.3.1",
    "fs-extra": "^10.1.0",
    "prettier": "^2.8.2",
    "typescript": "^4.8.3"
  },
  "bin": "dist/create-app.js",
  "exports": {
    "./package.json": "./package.json",
    "./commands/hydrogen/init": {
      "types": "./dist/commands/hydrogen/init.d.ts",
      "default": "./dist/commands/hydrogen/init.js"
    }
  },
  "files": [
    "dist",
    "oclif.manifest.json"
  ],
  "oclif": {
    "commands": "dist/commands",
    "hooks": {
      "init": "./dist/hooks/init.js"
    },
    "topics": {
      "hydrogen": {
        "description": "Hydrogen commands"
      }
    }
  }
}
