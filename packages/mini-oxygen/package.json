{
  "name": "@shopify/mini-oxygen",
  "author": "Shopify Inc.",
  "bin": {
    "oxygen-preview": "./dist/bootstrap.js",
    "oxygen-gen-config": "./dist/gen-config.js"
  },
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">16.7.0"
  },
  "version": "1.7.0",
  "description": "Development assistant for custom Shopify Oxygen hosted storefronts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/Shopify/mini-oxygen.git",
  "license": "MIT",
  "scripts": {
    "dev": "tsc -p . --preserveWatchOutput -w",
    "build": "tsc -p . && chmod +x dist/bootstrap.js dist/run.js dist/gen-config.js",
    "lint": "eslint --ext .js,.ts --max-warnings 0 src",
    "lint:format": "yarn run lint --fix",
    "type-check": "yarn tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules vitest ."
  },
  "files": [
    "dist/**"
  ],
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@miniflare/cache": "^2.14.0",
    "@miniflare/core": "^2.14.0",
    "@miniflare/queues": "^2.14.0",
    "@miniflare/runner-vm": "^2.14.0",
    "@miniflare/shared": "^2.14.0",
    "@miniflare/storage-memory": "^2.14.0",
    "@miniflare/web-sockets": "2.14.0",
    "@types/connect": "^3.4.35",
    "@types/mime": "^3.0.1",
    "body-parser": "1.20.2",
    "connect": "^3.7.0",
    "eventsource": "^2.0.2",
    "fs-extra": "^11.1.0",
    "get-port": "^5.1.1",
    "inquirer": "^9.0.0",
    "mime": "^3.0.0",
    "semiver": "^1.1.0",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@shopify/eslint-plugin": "^42.0.1",
    "@shopify/prettier-config": "^1.1.2",
    "@types/body-parser": "1.19.2",
    "@types/eventsource": "^1.1.10",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^18.7.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "vitest": "^0.33.0"
  }
}
