# Copy this file to .env and fill in your values

# Session secret for cookies (generate a random string)
SESSION_SECRET=your_session_secret_here

# Public Storefront API token from Shopify admin
PUBLIC_STOREFRONT_API_TOKEN=your_public_storefront_token

# Your Shopify store domain
PUBLIC_STORE_DOMAIN=your-store.myshopify.com

# Checkout domain (usually checkout.your-store.com)
PUBLIC_CHECKOUT_DOMAIN=checkout.your-store.com

# Optional: Storefront ID
PUBLIC_STOREFRONT_ID=

# Optional: Private token (only if needed for specific operations)
PRIVATE_STOREFRONT_API_TOKEN=

# Optional: Customer Account API settings
PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID=
PUBLIC_CUSTOMER_ACCOUNT_API_URL=

# Optional: Shop ID
SHOP_ID=

# Optional: Any other API keys your app needs
SOME_API_KEY=