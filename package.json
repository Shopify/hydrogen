{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build:prod": "npm run build -- --sourcemap --minify",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "bundle:worker": "esbuild worker/index.ts --bundle --outfile=build/worker/index.js --format=esm --log-override:this-is-undefined-in-esm=silent --define:process.env.REMIX_DEV_SERVER_WS_PORT=\\\"8002\\\"",
    "copy:assets": "cp -r public/* build/client",
    "deploy": "//todo",
    "dev:remix": "remix watch",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "dev:oxygen": "npm exec oxygen-preview",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx .",
    "format": "prettier --write --ignore-unknown .",
    "typecheck": "tsc --noEmit",
    "test": "run-p test:*",
    "test:integration": "playwright test",
    "test:unit": "vitest run",
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build"
  },
  "workspaces": [
    "packages/@remix-run/oxygen",
    "packages/@hydrogen/remix"
  ],
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@headlessui/react": "^1.7.2",
    "@remix-run/node": "1.6.2",
    "@remix-run/react": "1.6.2",
    "@remix-run/serve": "1.6.2",
    "@shopify/hydrogen-ui-alpha": "^2022.7.4",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "tiny-invariant": "^1.2.0",
    "typographic-base": "^1.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.23.0",
    "@remix-run/dev": "1.6.2",
    "@remix-run/eslint-config": "1.6.2",
    "@shopify/eslint-plugin": "^42.0.1",
    "@shopify/mini-oxygen": "^0.2.0",
    "@shopify/oxygen-workers-types": "^3.17.2",
    "@shopify/prettier-config": "^1.1.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "@vitest/coverage-c8": "^0.24.3",
    "c8": "^7.11.3",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-plugin-hydrogen": "0.12.2",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.7.1",
    "remix-flat-routes": "^0.4.3",
    "rimraf": "^3.0.2",
