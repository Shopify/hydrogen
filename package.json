{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build -w demo-store",
    "dev": "npm run dev -w demo-store",
    "preview": "npm run preview -w demo-store",
    "postinstall": "mkdir -p templates/demo-store/node_modules/.bin && cp -P node_modules/.bin/h2 templates/demo-store/node_modules/.bin",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx ./packages && npm run lint -w demo-store",
    "format": "prettier --write --ignore-unknown ./packages && npm run format -w demo-store",
    "typecheck": "tsc --noEmit && npm run typecheck -w demo-store"
  },
  "workspaces": [
    "templates/demo-store",
    "packages/remix-oxygen",
    "packages/hydrogen",
    "packages/hydrogen-remix",
    "packages/cli"
  ],
  "prettier": "@shopify/prettier-config",
  "devDependencies": {
    "@playwright/test": "^1.27.1",
    "@types/eslint": "^8.4.10",
    "eslint": "^8.20.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": ">=16.13"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint",
      "prettier --parser=typescript --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
