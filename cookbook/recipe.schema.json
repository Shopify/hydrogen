{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "gid": {
      "type": "string",
      "format": "uuid",
      "pattern": "^([0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-8][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}|00000000-0000-0000-0000-000000000000|ffffffff-ffff-ffff-ffff-ffffffffffff)$",
      "description": "The unique identifier of the recipe"
    },
    "title": {
      "type": "string",
      "description": "The title of the recipe"
    },
    "summary": {
      "type": "string",
      "description": "The summary of what the recipe does"
    },
    "description": {
      "type": "string",
      "description": "The description of the recipe"
    },
    "notes": {
      "description": "The notes of the recipe",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requirements": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "description": "The requirements of the recipe"
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "The path of the ingredient"
          },
          "description": {
            "description": "The description of the ingredient",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "path"
        ],
        "additionalProperties": false
      },
      "description": "The ingredients of the recipe"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "PATCH",
              "INFO",
              "NEW_FILE"
            ],
            "description": "The type of step"
          },
          "step": {
            "type": "string",
            "pattern": "^\\d+(?:\\.\\d+)?$",
            "description": "The step numerical representation, with optional substep if applicable"
          },
          "name": {
            "type": "string",
            "description": "The name of the step"
          },
          "description": {
            "description": "The description of the step",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "notes": {
            "description": "The notes of the step",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ingredients": {
            "description": "The ingredients of the step",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string",
                  "description": "The path of the ingredient"
                },
                "renamedFrom": {
                  "description": "The file that was renamed from",
                  "type": "string"
                }
              },
              "required": [
                "path"
              ],
              "additionalProperties": false
            }
          },
          "diffs": {
            "description": "The diffs of the step",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "file": {
                  "type": "string",
                  "description": "The file of the diff"
                },
                "patchFile": {
                  "type": "string",
                  "description": "The patch file of the diff"
                }
              },
              "required": [
                "file",
                "patchFile"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "type",
          "step",
          "name"
        ],
        "additionalProperties": false
      },
      "description": "The steps of the recipe"
    },
    "deletedFiles": {
      "description": "The deleted files of the recipe",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "nextSteps": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "description": "The next steps of the recipe"
    },
    "commit": {
      "type": "string",
      "description": "The commit hash the recipe is based on"
    },
    "llms": {
      "default": {
        "userQueries": [],
        "troubleshooting": []
      },
      "type": "object",
      "properties": {
        "userQueries": {
          "default": [],
          "description": "The user queries of the recipe",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "troubleshooting": {
          "default": [],
          "description": "The troubleshooting of the recipe",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "issue": {
                "type": "string",
                "description": "The issue of the troubleshooting"
              },
              "solution": {
                "type": "string",
                "description": "The solution of the troubleshooting"
              }
            },
            "required": [
              "issue",
              "solution"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "userQueries",
        "troubleshooting"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "gid",
    "title",
    "summary",
    "description",
    "ingredients",
    "steps",
    "commit",
    "llms"
  ],
  "additionalProperties": false
}
